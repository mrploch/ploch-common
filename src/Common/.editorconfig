[*.cs]
dotnet_diagnostic.s3236.severity = none # Caller information arguments should not be provided explicitly - gives false positives for use of .net standard version of the Guard class

# ReSharper properties
# resharper_csharp_case_block_braces = next_line_shifted_2
# resharper_csharp_empty_block_style = together
# Roslynator
roslynator_block_braces_style = single_line_when_empty
# Format accessor's braces on single line or multiple lines
# Default value is multi_line
roslynator_accessor_braces_style = single_line_when_expression_is_on_single_line
dotnet_diagnostic.rcs0023.severity = warning
dotnet_diagnostic.rcs0022 = false

# StyleCop
dotnet_diagnostic.sa1500.severity = none # this one controls braces on the same line
dotnet_diagnostic.sa1501.severity = warning
